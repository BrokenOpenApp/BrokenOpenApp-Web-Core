{% extends 'JMBTechnologyBrokenOpenAppCoreBundle::layout.html.twig' %}

{% import 'JMBTechnologyBrokenOpenAppCoreBundle::breadcrumb.html.twig' as breadcrumb %}
{% block main %}

	{{ breadcrumb.echo([
	{ label: 'Dashboard', link: path('_main_dashboard') },
	]) }}

	<section>
		<h1>Welcome!</h1>
	</section>

	<section>

		{% if done %}
			<p>Password changed!</p>
		{% else %}
			<form class="styled" action="{{ path('account_current_change_password' ) }}" method="post" {{ form_enctype(form) }}>
				{{ form_errors(form) }}

				{{ form_row(form.old_password) }}
				{{ form_row(form.new_password1) }}
				{{ form_row(form.new_password2) }}

				{{ form_rest(form) }}

				<input type="submit"  value="Save New Password"/>
			</form>
		{% endif %}

	</section>

{% endblock %}
