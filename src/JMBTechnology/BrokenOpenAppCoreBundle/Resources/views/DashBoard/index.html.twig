{% extends 'JMBTechnologyBrokenOpenAppCoreBundle::layout.html.twig' %}

{% import 'JMBTechnologyBrokenOpenAppCoreBundle::breadcrumb.html.twig' as breadcrumb %}
{% block main %}

	<section>
		<h1>Welcome!</h1>
	</section>

	<section class="latest-issues">
		<h2>Your Projects</h2>
		{% if projects %}
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Project</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for project in projects %}
						<tr>
							<td class="">{{ project.title }}</td>
							<td class="action-link"><a href="{{ path('_project_index', {'projectId': project.id}) }}" class="btn btn-default">Details</a></td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		{% else %}
			<p>No projects</p>
		{% endif %}
	</section>

	{%  if isCurrentUserCreateProject %}
		<p><a href="{{ path('_project_new', {}) }}" class="btn btn-lg btn-default">New Project</a></p>
	{%  endif %}

{% endblock %}
