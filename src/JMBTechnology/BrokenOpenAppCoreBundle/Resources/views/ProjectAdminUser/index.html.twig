{% extends 'JMBTechnologyBrokenOpenAppCoreBundle::layout.html.twig' %}





{% block main %}

	<section class="latest-issues">
		<h2>Users</h2>
		{% if userInProjects %}
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Email</th>
						<th>Write</th>
						<th>Admin</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for userInProject in userInProjects %}
						<tr>
							<td>{{ userInProject.email }}</td>
							<td>{%  if userInProject.write or userInProject.admin %}Yes{% else %}No{%  endif %}</td>
							<td>{%  if userInProject.admin  %}Yes{% else %}No{%  endif %}</td>
							<td class="action-link">&nbsp;</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		{% else %}
			<p>No users are in this project</p>
		{% endif %}
	</section>



{%  endblock %}