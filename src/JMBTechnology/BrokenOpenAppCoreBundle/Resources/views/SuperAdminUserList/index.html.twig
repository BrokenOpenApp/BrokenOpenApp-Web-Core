{% extends 'JMBTechnologyBrokenOpenAppCoreBundle::layout.html.twig' %}





{% block main %}

	<section class="latest-issues">
		<h2>Users</h2>
		{% if users %}
			<table class="table table-striped">
				<thead>
					<tr>
						<th>ID</th>
						<th>Email</th>
						<tH>Locked</tH>
						<th>Super Admin</th>
						<th>Create project</th>
						<th>All Projects Read</th>
						<th>All Projects Write</th>
						<th>All Projects Admin</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for user in users %}
						<tr>
							<td>{{ user.id }}</td>
							<td>{{ user.email }}</td>
							<td>{%  if user.isLocked %}Yes{%  else %}No{%  endif %}</td>
							<td>{%  if user.isSuperAdmin %}Yes{%  else %}No{%  endif %}</td>
							<td>{%  if user.isCreateProject %}Yes{%  else %}No{%  endif %}</td>
							<td>{%  if user.isAllProjectsRead %}Yes{%  else %}No{%  endif %}</td>
							<td>{%  if user.isAllProjectsWrite %}Yes{%  else %}No{%  endif %}</td>
							<td>{%  if user.isAllProjectsAdmin %}Yes{%  else %}No{%  endif %}</td>
							<td class="action-link">&nbsp;</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		{% else %}
			<p>No users. How are you seeing this then? Oh shit.</p>
		{% endif %}
	</section>



{%  endblock %}


