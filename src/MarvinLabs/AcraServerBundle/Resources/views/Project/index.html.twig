{% extends 'MLabsAcraServerBundle::layout.html.twig' %}

{% import 'MLabsAcraServerBundle::breadcrumb.html.twig' as breadcrumb %}
{% block main %}

	{{ breadcrumb.echo([
	{ label: 'Dashboard', link: path('_main_dashboard') },
	{ label: 'Project ' ~ project.title, link: path('_project_index', {'projectId':project.id}) }
	]) }}


	<!-- List - Last 10 issues submitted -->
	<section class="latest-issues">
		<h2>Latest {{ crashes|length }} issues</h2>
		{% if crashes %}
			<table>
				<thead>
				{% block table_headers %}
					<tr>
						<th>Last Crash</th>
						<th>Crashes</th>
						<th></th>
					</tr>
				{% endblock %}
				</thead>
				<tbody>
				{% for c in crashes %}

					<tr>
						<td class="created-at">{{ c.latestCrashDate | date('d/m/Y H:i') }} (UTC)</td>
						<td class="crash-num">{{ c.crashNum }}</td>
						<td class="action-link"><a href="{{ path('_project_issue_index', {'projectId':project.id, 'issueId': c.issueId}) }}" class="primary-button">Details</a></td>
					</tr>
				{% endfor %}
				</tbody>
				<tfoot>
				{{ block('table_headers') }}
				</tfoot>
			</table>
		{% else %}
			<p>No crashes have been submitted yet for your applications</p>
		{% endif %}
	</section>

{% endblock %}
